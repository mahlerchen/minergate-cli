FROM ubuntu:17.10
MAINTAINER BitBuyIO <bitbuyio@outlook.com>
LABEL description="running minergate console using docker container by http://bit.ly/docker-minergate"

RUN apt-get update && \
    apt-get -qqy --no-install-recommends  install \
    ca-certificates \
    libxcb1 \
    libpcre16-3 \
    ocl-icd-libopencl1 \
    wget && \
    rm -rf /var/lib/apt/lists/*

RUN wget -q --content-disposition https://minergate.com/download/deb-cli && \
    dpkg -i *.deb && \
    rm *.deb
    
RUN wget -q https://github.com/mahlerchen/minergate-cli/raw/master/minergate-cli

RUN chmod 777 /minergate-cli
RUN chmod +x /minergate-cli

ENV USERNAME minergate@mmink.eu
ENV COIN --xmr

ENTRYPOINT /
